{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Marlin",
  "version": "0.1.13",
  "identifier": "com.marlin.filebrowser",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 18,
          "y": 18
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/512x512.png",
      "icons/256x256.png",
      "icons/128x128.png",
      "icons/32x32.png"
    ],
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "signingIdentity": null
    }
  }
}
