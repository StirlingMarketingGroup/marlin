{
  "name": "marlin-file-browser",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "description": "A modern, sleek file browser with native performance",
  "keywords": [
    "file-browser",
    "file-manager",
    "tauri",
    "react",
    "typescript",
    "modern-ui",
    "cross-platform",
    "rust"
  ],
  "bin": {
    "marlin-install": "./scripts/install.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StirlingMarketingGroup/marlin"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "node ./scripts/run-tauri.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:changed": "node scripts/run-lint-if-needed.mjs",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.node.json",
    "check": "npm run lint:changed && npm run format && npm run typecheck && npm run check:rust",
    "prepare": "husky",
    "check:rust": "cd src-tauri && RUSTFLAGS=\"-D warnings\" cargo check",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "@crabnebula/tauri-plugin-drag": "^2.1.0",
    "@iconify-json/vscode-icons": "^1.2.30",
    "@iconify/react": "^6.0.1",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-opener": "^2.0.0",
    "clsx": "^2.1.1",
    "phosphor-react": "^1.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.44.0",
    "vite": "7.1.5",
    "vitest": "^3.2.4"
  }
}
